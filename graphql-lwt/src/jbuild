(jbuild_version 1)

(rule
 ((targets (assets.ml))
  (deps ((files_recursively_in assets)))
  (action (run ${bin:ocaml-crunch} -m plain assets -o assets.ml))))

(library
 ((name graphql_lwt)
  (public_name graphql-lwt)
  (wrapped false)
  (libraries (str graphql lwt ;cohttp.lwt websocket-lwt.cohttp
  ))))
